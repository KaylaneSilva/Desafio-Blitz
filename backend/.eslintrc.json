{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "trybe-backend",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["tests/", "node_modules/"],
    "rules": {
        "no-unused-vars": "off",
        "no-shadow": "off",
        "sonarjs/no-duplicate-string": ["error", 5]
    }
}
